<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Separator?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.github.yoep.popcorn.controllers.components.SettingsSubtitlesComponent">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints prefWidth="150"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

    <!-- Subtitles title -->
    <Label styleClass="subsection-title" text="%settings_subtitles" GridPane.valignment="TOP"
           GridPane.rowSpan="3" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <!-- Default language -->
    <Label text="%settings_subtitles_default"
           GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <ComboBox fx:id="defaultSubtitle"
              GridPane.columnIndex="2" GridPane.rowIndex="0"/>

    <!-- Separator -->
    <Separator
            GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>
